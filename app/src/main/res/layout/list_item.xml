<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_marginTop="16dp"    android:padding="6dp"    android:orientation="horizontal"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/word"            android:layout_gravity="center"            android:text="@string/kata"            android:layout_height="wrap_content"            android:layout_width="100dp"/>        <TextView            android:paddingLeft="10dp"            android:id="@+id/meaning"            android:text="@string/keterangan"            android:layout_width="match_parent"            android:layout_height="wrap_content" />    </LinearLayout></LinearLayout>